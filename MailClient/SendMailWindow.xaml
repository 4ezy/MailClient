<Window x:Class="MailClient.SendMailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
        Title="SendMailWindow" Width="700" Height="500" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip">
    <Grid Margin="20, 0, 20, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="145"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Кому:"/>
            <TextBox x:Name="toTextBox" IsReadOnly="True"/>
            <Label Content="Дата:"/>
            <TextBox x:Name="dateTextBox" IsReadOnly="True"/>
            <Label Content="Тема:"/>
            <TextBox x:Name="subjectTextBox" IsReadOnly="True"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="180"/>
            </Grid.RowDefinitions>
            <RichTextBox Grid.Row="0" x:Name="textRichTextBox" IsReadOnly="True"  ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="24"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Приложения:"/>
                <ListBox x:Name="attachmentsListBox" Grid.Row="1" Margin="0, 0, 0, 5" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button x:Name="loadAttachmentsButton"
                        Content="Загрузить" Width="100" Click="LoadAttachmentsButton_Click"/>
                    <Button x:Name="deleteAttachmentButton" Content="Удалить" Width="100" Margin="10, 0, 0, 0" Click="DeleteAttachmentButton_Click"/>
                </StackPanel>
                <CheckBox Grid.Row="3" x:Name="encryptMessage" Content="Зашифровать сообщение" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <Button x:Name="sendButton" Content="Отправить" Width="100"/>
                    <Button x:Name="cancelButton" Content="Отмена" Width="100" Margin="10, 0, 0, 0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
